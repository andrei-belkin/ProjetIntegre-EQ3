pipeline {
    agent {
        kubernetes {
            inheritFrom 'jenkins-agent'
            yaml '''
                spec:
                  containers:
                  - name: docker
                    image: docker:dind
                    securityContext:
                      privileged: true
                '''
        }
    }

    stages {
        stage('Build Docker images') {
            steps {
                container('docker') {
                    dir('react-frontend') {
                        sh "docker build . -t docker-snap.nexus.int.slongpre.com/test:dev"
                        sh "docker build . -f Dockerfile.production -t docker-snap.nexus.int.slongpre.com/test:prod"
                        sh "docker image push -a docker-snap.nexus.int.slongpre.com/test"
                    }
                }
            }
        }
    }
}